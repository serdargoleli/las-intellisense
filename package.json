{
  "name": "lascss-intellisense",
  "displayName": "lascss",
  "description": "VS Code IntelliSense for LASCSS utility classes with color details and variants.",
  "icon": "images/las-logo.png",
  "version": "1.0.4",
  "publisher": "serdargoleli",
  "repository": {
    "type": "git",
    "url": "https://github.com/serdargoleli/las-intellisense.git"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:sass",
    "onLanguage:less",
    "onLanguage:stylus",
    "onLanguage:postcss",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:astro",
    "onLanguage:angular"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configurationDefaults": {
      "[html]": {
        "editor.wordBasedSuggestions": false
      },
      "[css]": {
        "editor.wordBasedSuggestions": false
      },
      "[scss]": {
        "editor.wordBasedSuggestions": false
      },
      "[javascript]": {
        "editor.wordBasedSuggestions": false
      },
      "[typescript]": {
        "editor.wordBasedSuggestions": false
      },
      "[javascriptreact]": {
        "editor.wordBasedSuggestions": false
      },
      "[typescriptreact]": {
        "editor.wordBasedSuggestions": false
      },
      "[vue]": {
        "editor.wordBasedSuggestions": false
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
